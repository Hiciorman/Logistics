@model Logistics.WebApp.Models.Courier.LoginViewModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Courier", FormMethod.Post, new { @class = "form-center" }))
{
    @Html.ValidationSummary(true)
    <h2>Login</h2>
    <div class="form-group">
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
    </div>
    <input type="submit" name="submitButton" value="Login" class="btn btn-lg btn-primary btn-block margin-top-10px" />
}